<h1>Volunteer Name: <%= @volunteer.name %></h1>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Edit volunteer's name</label>
  <input id="name" name="name" class="form-control" type="text">

  <button types="submit">Save</button>
</form>


